<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:hyzjkz">
    <!--  TextBlock  -->
    <Style x:Key="Style.Text.Normal" TargetType="TextBlock">
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="LineStackingStrategy" Value="MaxHeight" />
        <Setter Property="TextLineBounds" Value="Full" />
        <Setter Property="OpticalMarginAlignment" Value="TrimSideBearings" />
        <Setter Property="FontFamily" Value="微软雅黑" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style x:Key="Style.Text.Bold" BasedOn="{StaticResource Style.Text.Normal}" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style x:Key="Style.Text.TitleBar" BasedOn="{StaticResource Style.Text.Bold}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    <Style x:Key="Style.Text.Small" BasedOn="{StaticResource Style.Text.Normal}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="Style.Text.Middle" BasedOn="{StaticResource Style.Text.Normal}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="Style.Text.Large" BasedOn="{StaticResource Style.Text.Normal}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="Style.Text.Huge" BasedOn="{StaticResource Style.Text.Normal}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="Style.Text.Largest" BasedOn="{StaticResource Style.Text.Normal}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!--  NumberBox  -->
    <Style x:Key="Style.NumberBox.Normal" TargetType="NumberBox">
        <Setter Property="LargeChange" Value="0" />
        <Setter Property="SmallChange" Value="0" />
        <Setter Property="AcceptsExpression" Value="False" />
        <Setter Property="SpinButtonPlacementMode" Value="Hidden" />
    </Style>
    <Style x:Key="Style.NumberBox.Spin" TargetType="NumberBox">
        <Setter Property="LargeChange" Value="3" />
        <Setter Property="SmallChange" Value="1" />
        <Setter Property="AcceptsExpression" Value="False" />
        <Setter Property="SpinButtonPlacementMode" Value="Inline" />
    </Style>

    <!--  Button  -->
    <Style x:Key="Style.Button.Normal" BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Width" Value="150" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Margin" Value="0,20,0,0" />
    </Style>
    <Style x:Key="Style.Button.Accent" BasedOn="{StaticResource AccentButtonStyle}" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Width" Value="150" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Margin" Value="0,20,0,0" />
    </Style>
    <Style x:Key="Style.Button.CopyData" BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="40" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="2,2,2,2" />
    </Style>
</ResourceDictionary>
