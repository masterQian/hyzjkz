                Margin="2.5" Orientation="Vertical">
        <TextBlock x:Name="TB1" Margin="0,5,0,5" FontWeight="Bold" Style="{StaticResource Style.Text.Large}" />
        <TextBlock x:Name="TB2" Style="{StaticResource Style.Text.Middle}" />
        <TextBlock x:Name="TB3" Style="{StaticResource Style.Text.Middle}" />
        <TextBlock x:Name="TB4" Margin="0,0,0,5" Style="{StaticResource Style.Text.Middle}" />
    </StackPanel>
</Button>
