<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Margin="2.5" Padding="0"
      RowDefinitions="*, Auto, Auto, Auto">
    <TextBlock x:Name="TB1" Grid.Row="0" Margin="0,0,0,5"
               FontWeight="Bold"
               Style="{StaticResource Style.Text.Huge}" />
    <TextBlock x:Name="TB2" Grid.Row="1" Style="{StaticResource Style.Text.Large}" />
    <TextBlock x:Name="TB3" Grid.Row="2" Style="{StaticResource Style.Text.Large}" />
    <TextBlock x:Name="TB4" Grid.Row="3" Margin="0,0,0,5" Style="{StaticResource Style.Text.Large}" />
</Grid>