<Button xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Padding="0">
    <StackPanel x:Name="Panel" Width="170" Height="100"
                Margin="2,2.5,2,2.5" Orientation="Vertical">
        <TextBlock x:Name="TB1" Margin="0,5,0,5" FontWeight="Bold" Style="{StaticResource Style.Text.Middle}" />
        <TextBlock x:Name="TB2" Style="{StaticResource Style.Text.Small}" />
        <TextBlock x:Name="TB3" Style="{StaticResource Style.Text.Small}" />
        <TextBlock x:Name="TB4" Margin="0,0,0,5" Style="{StaticResource Style.Text.Small}" />
    </StackPanel>
</Button>