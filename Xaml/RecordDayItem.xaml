<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Margin="1" Padding="0"
      RowDefinitions="*, Auto, Auto, Auto">
    <TextBlock x:Name="TB1" Grid.Row="0" Margin="0,0,0,2.5"
               FontWeight="Bold" FontSize="24"
               Style="{StaticResource Style.Text.Large}" />
    <TextBlock x:Name="TB2" Grid.Row="1" FontSize="18" Style="{StaticResource Style.Text.Middle}" />
    <TextBlock x:Name="TB3" Grid.Row="2" FontSize="18" Style="{StaticResource Style.Text.Middle}" />
    <TextBlock x:Name="TB4" Grid.Row="3" Margin="0,0,0,2.5"
               FontSize="18"
               Style="{StaticResource Style.Text.Middle}" />
</Grid>